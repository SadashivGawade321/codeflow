# CodeFlow AI - Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# OpenAI API (Optional - for enhanced AI explanations)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Configuration
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# Explanation Style: beginner, intermediate, advanced
DEFAULT_EXPLANATION_STYLE=beginner
